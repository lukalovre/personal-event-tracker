<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:AvaloniaApplication1.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:AvaloniaApplication1.Views;assembly=AvaloniaApplication1"
    mc:Ignorable="d"
    x:DataType="vm:SongsViewModel"
    x:Class="AvaloniaApplication1.Views.SongsView"
    xmlns:view="using:AvaloniaApplication1.Views">
    <DockPanel>
        <TabControl>
            <TabItem Header="â˜…">
                <DockPanel>
                    <DataGrid Margin="1"
                        Width="570"
                        ItemsSource="{Binding GridItemsBookmarked}"
                        IsReadOnly="True"
                        GridLinesVisibility="All"
                        BorderThickness="2"
                        BorderBrush="Teal"
                        SelectedItem="{Binding SelectedGridItem}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Index}"
                                Header="{Binding GridCountItemsBookmarked}"
                                Width="45" />
                            <DataGridTextColumn Binding="{Binding Artist}"
                                Header="Artist"
                                Width="200" />
                            <DataGridTextColumn Binding="{Binding Title}"
                                Header="Title"
                                Width="200" />
                            <DataGridTextColumn Binding="{Binding Year}"
                                Header="Year"
                                Width="70" />
                            <DataGridTextColumn Binding="{Binding Times}"
                                Header="Times"
                                Width="50" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Header="All">
                <DockPanel>
                    <DataGrid Margin="1"
                        Width="570"
                        ItemsSource="{Binding GridItems}"
                        IsReadOnly="True"
                        GridLinesVisibility="All"
                        BorderThickness="2"
                        BorderBrush="Teal"
                        SelectedItem="{Binding SelectedGridItem}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Index}"
                                Header="{Binding GridCountItems}"
                                Width="45" />
                            <DataGridTextColumn Binding="{Binding Artist}"
                                Header="Artist"
                                Width="200" />
                            <DataGridTextColumn Binding="{Binding Title}"
                                Header="Title"
                                Width="200" />
                            <DataGridTextColumn Binding="{Binding Year}"
                                Header="Year"
                                Width="70" />
                            <DataGridTextColumn Binding="{Binding Times}"
                                Header="Times"
                                Width="50" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>
        </TabControl>
        <TabControl Margin="5">
            <TabItem Header="Info">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="{Binding SelectedItem.Title}"
                            FontSize="20"
                            FontWeight="Bold" />
                        <TextBlock Text="{Binding SelectedItem.Artist}"
                            FontSize="20"
                            FontWeight="Bold" />
                        <TextBlock Text="{Binding SelectedItem.Year}"
                            FontSize="20"
                            FontWeight="Bold" />
                        <Button Command="{Binding OpenLink}">Open Link</Button>
                        <Button>
                            <Image Source="{Binding Image}"
                                Width="430"
                                Height="430" />
                        </Button>
                        <view:EventView DataContext="{Binding EventViewModel}" />
                        <Button Command="{Binding AddEventClick}">Listen again</Button>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="New">
                <ScrollViewer>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Command="{Binding AddItemClick}"
                                Margin="15">Add</Button>
                            <TextBox Watermark="Paste url"
                                Text="{Binding InputUrl}"
                                Margin="15" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Artist  " />
                            <TextBox Text="{Binding NewItem.Artist}"
                                HorizontalAlignment="Stretch" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Title  " />
                            <TextBox Text="{Binding NewItem.Title}"
                                HorizontalAlignment="Stretch" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Year  " />
                            <TextBox Text="{Binding NewItem.Year}"
                                HorizontalAlignment="Stretch" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Runtime  " />
                            <TextBox Text="{Binding NewItem.Runtime}"
                                HorizontalAlignment="Stretch" />
                        </StackPanel>
                        <Image Source="{Binding NewImage}" />
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding UseNewDate}"/>
                            <TextBlock Text="Date"
                                VerticalAlignment="Center" />
                            <TextBlock Text="    " />
                            <TextBox Text = "{Binding NewEvent.DateEnd, Converter={StaticResource DateTimeToStringConverter}, ConverterParameter=yyyy-MM-dd HH:mm:ss}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Rating" />
                            <NumericUpDown Value="{Binding NewEvent.Rating, Mode=TwoWay}"
                                FormatString="0"
                                Minimum="1"
                                Maximum="5" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Season" />
                            <TextBox Text="{Binding NewEvent.Chapter}"
                                HorizontalAlignment="Stretch" />
                        </StackPanel>
                        <CheckBox IsChecked="{Binding NewEvent.Bookmakred}">â˜…</CheckBox>
                        <TextBox Watermark="Comment"
                            Text="{Binding NewEvent.Comment}" />
                        <ComboBox ItemsSource="{Binding PeopleList}"
                            SelectedItem="{Binding SelectedPerson}" />
                        <ComboBox ItemsSource="{Binding MusicPlatformTypes}"
                            SelectedItem="{Binding NewEvent.Platform}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Edit">
                <TextBlock Text="Event" />
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>