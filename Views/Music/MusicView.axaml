<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniaApplication1.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="clr-namespace:AvaloniaApplication1.Views;assembly=AvaloniaApplication1"
             mc:Ignorable="d"
             x:DataType="vm:MusicViewModel"
             x:Class="AvaloniaApplication1.Views.MusicView"
             xmlns:view="using:AvaloniaApplication1.Views">
    <DockPanel>
        <DataGrid Margin="20"
                  ItemsSource="{Binding Music}"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  BorderThickness="2"
                  BorderBrush="Teal"
                  SelectedItem="{Binding SelectedItem}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Artist}"
                                    Header="Artist"
                                    Width="150" />
                <DataGridTextColumn Binding="{Binding Title}"
                                    Header="Title"
                                    Width="150" />
                <DataGridTextColumn Binding="{Binding Year}"
                                    Header="Year"
                                    Width="65" />
                <DataGridTextColumn Binding="{Binding Played}"
                                    Header="#"
                                    Width="60" />
                <DataGridCheckBoxColumn Binding="{Binding Bookmarked}"
                                        Header="★"
                                        Width="60" />
            </DataGrid.Columns>
        </DataGrid>
        <TabControl Margin="5">
            <TabItem Header="Info">
                <ScrollViewer>
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding Info}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,10,0,0"
                                            CornerRadius="5"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            Padding="5">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Property}" />
                                            <TextBlock Margin="5 0"
                                                       FontWeight="Bold"
                                                       Text="{Binding Value}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Image Source="{Binding Cover}" />
                        <TextBlock Text="Event" />
                        <view:EventView DataContext="{Binding EventViewModel}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="New">
                <ScrollViewer>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Command="{Binding AddClick}"
                                    Margin="15">Add</Button>
                            <TextBox Watermark="Paste url"
                                     Text="{Binding InputUrl}"
                                     Margin="15" />
                        </StackPanel>
                        <TextBox Watermark="Artist"
                                 Text="{Binding NewMusic.Artist}" />
                        <TextBox Watermark="Title"
                                 Text="{Binding NewMusic.Title}" />
                        <TextBox Watermark="Year"
                                 Text="{Binding NewMusic.Year}" />
                        <TextBox Watermark="Runtime"
                                 Text="{Binding NewMusic.Runtime}" />
                        <TextBox Watermark="SpotifyID"
                                 Text="{Binding NewMusic.SpotifyID}" />
                        <Image Source="{Binding NewMusicCover}" />
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding UseDate}" />
                            <DatePicker SelectedDate="{Binding NewEvent.DateEnd, Mode=TwoWay}"
                                        IsEnabled="{Binding UseDate}" />
                            <TimePicker SelectedTime="{Binding NewEvent.DateEnd.Value.TimeOfDay}"
                                        ClockIdentifier="24HourClock"
                                        IsEnabled="{Binding UseDate}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Rating" />
                            <NumericUpDown Value="{Binding NewEvent.Rating}"
                                           FormatString="0"
                                           Minimum="1"
                                           Maximum="5" />
                        </StackPanel>
                        <CheckBox IsChecked="{Binding NewEvent.Bookmakred}">★</CheckBox>
                        <TextBox Watermark="Comment"
                                 Text="{Binding NewEvent.Comment}" />
                        <TextBox Watermark="People"
                                 Text="{Binding NewEvent.People}" />
                        <TextBox Watermark="Platform"
                                 Text="{Binding NewEvent.Platform}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Edit">
                <TextBlock Text="Event" />
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>